{
  "name": "tibetan-sort-js",
  "version": "1.0.1",
  "description": "Provides a function to compare two strings",
  "main": "dist/tibetan-sort-js.min.js",
  "scripts": {
    "compile": "webpack --env build && yarn run genflow",
    "prepublish": "yarn run compile",
    "build": "yarn run compile && yarn run gendoc",
    "genflow": "flow gen-flow-files ./src/*.js --out-dir ./dist/",
    "gendoc": "documentation readme src/*.js --section=API",
    "dev": "webpack --env dev",
    "test": "mocha --compilers js:babel-core/register --colors ./test/*.spec.js",
    "test:watch": "mocha --compilers js:babel-core/register --colors -w ./test/*.spec.js"
  },
  "devDependencies": {
    "babel-cli": "*",
    "babel-core": "*",
    "babel-eslint": "*",
    "babel-loader": "*",
    "babel-plugin-add-module-exports": "*",
    "babel-plugin-transform-flow-strip-types": "*",
    "babel-preset-es2015": "*",
    "babel-preset-flow": "*",
    "chai": "*",
    "eslint": "*",
    "eslint-loader": "*",
    "eslint-plugin-flowtype": "*",
    "eslint-plugin-flowtype-errors": "*",
    "flow-bin": "*",
    "mocha": "*",
    "webpack": "*",
    "yargs": "*",
    "documentation": "*"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "plugin:flowtype/recommended"
    ],
    "plugins": [
      "flowtype",
      "flowtype-errors"
    ],
    "rules": {
      "flowtype-errors/show-errors": 2
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "flow"
    ],
    "plugins": [
      "transform-flow-strip-types"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BuddhistDigitalResourceCenter/tibetan-sort-js.git"
  },
  "keywords": [
    "tibetan",
    "collation",
    "sorting"
  ],
  "author": "Elie Roux (Buddhist Digital Resource Center)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BuddhistDigitalResourceCenter/tibetan-sort-js/issues"
  },
  "homepage": "https://github.com/BuddhistDigitalResourceCenter/tibetan-sort-js/issues"
}
